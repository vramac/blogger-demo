<!doctype html>
<html>
<head>
    <title>Blogger</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">


     <div class="page-header text-center">
        <h1><span class="fa fa-user"></span> <%= post.title %></h1>
        <a href="/blog/<%= post.blogId%>" class="btn btn-default btn-sm">View Posts</a>
        <a href="/profile" class="btn btn-default btn-sm">Profile</a>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

     <% if (typeof message !== 'undefined' && message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>
   
    <div class="well">
            <p>
               <%= post.content %><br>
            </p>   
             <% if (post.image) { %>
            </br>
            <img src="<%= image%>"/>
            </br>
            </br>
            <% } %> 
    </div>

     <h3>Comments:</h3>

     <% if (comments.length > 0) {%>
    <div class="well">
                <% for(var i = 0; i < comments.length; i++) {%>
                    <strong><%= comments[i].userId %> -</strong>
                    <%= comments[i].content %>
                    <% if (i != comments.length-1) { %>
                        </br>
                    <% } %>
                <% } %>
         </br>  
    </div>
    <% } %>

      
        <form action="/postComments/<%= post._id %>" method="post">
            <div class="form-group">
                <!--  <textarea inopuplaceholder="Enter your comment..." rows="4" cols="50" name="content">
                </textarea>  -->
                <input type="text" name="content" class="form-control" id="content1" placeholder="Enter your comments..." >     
            </div>
            <button type="submit" class="btn btn-warning btn-lg">Post</button> 
        </form>
    </div>

</div>
</div>
</body>
</html>